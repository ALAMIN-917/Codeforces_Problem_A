#include <bits/stdc++.h>
using namespace std;
#define int long long
#define ll long long
#define endl '\n'
#define yes cout << "YES" << endl
#define no cout << "NO" << endl
#define pb push_back
#define ppb pop_back
#define ins insert
#define ff first
#define ss  second

void solve()
{
    int a,b,c; cin>>a>>b>>c;
    int p = abs(a-b);
    p++;
    p/=2;
    int ans = (p + (c-1))/c;
    cout<<ans<<endl;
}

int32_t main()
{
    int t;
    cin >> t;
    while(t--)
    {
      solve();
    }
}

